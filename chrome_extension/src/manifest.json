{
  "manifest_version": 3,
  "name": "Focus - News Feed Eradicator",
  "version": "1.0.0",
  "description": "Remove distracting news feeds from social media sites and replace them with inspirational quotes",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.instagram.com/*",
    "https://instagram.com/*",
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://www.reddit.com/*",
    "https://reddit.com/*",
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://github.com/*",
    "https://news.ycombinator.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content/facebook.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
      "js": ["content/twitter.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["content/instagram.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content/linkedin.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["content/reddit.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content/youtube.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.github.com/*"],
      "js": ["content/github.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://news.ycombinator.com/*"],
      "js": ["content/hackernews.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Focus Settings",
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "options_page": "options/index.html",
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/*", "icons/*", "popup/*", "options/*"],
      "matches": ["<all_urls>"]
    }
  ]
}