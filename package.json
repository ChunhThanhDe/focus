{
  "name": "focus-extension",
  "version": "1.0.2",
  "type": "module",
  "description": "Chrome extension combining Flutter newtab and social media cleaner",
  "private": true,
  "scripts": {
    "build:flutter": "flutter build web --release --csp --no-web-resources-cdn",
    "copy:newtab": "node scripts/copy-flutter-web.js",
    "build:ts": "rollup -c",
    "build:ext": "npm run build:flutter && npm run copy:newtab && npm run build:ts",
    "clean:ext": "rimraf extension/newtab/* extension/social_cleaner/*",
    "dev:ts": "rollup -c -w",
    "dev": "npm run build:flutter && npm run copy:newtab && npm run dev:ts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-typescript": "^11.1.6",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.6",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-string": "^3.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "fs-extra": "^11.2.0"
  }
}
