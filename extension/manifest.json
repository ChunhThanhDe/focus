{
  "manifest_version": 3,
  "name": "Focus to your Target",
  "version": "1.0.7",
  "description": "A new-tab extension that hides social media clutter and shows inspiring quotes to keep you focused",
  "chrome_url_overrides": {
    "newtab": "newtab/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://web.facebook.com/*",
        "https://www.instagram.com/*",
        "https://www.tiktok.com/*",
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.reddit.com/*",
        "https://old.reddit.com/*",
        "https://www.linkedin.com/*",
        "https://www.youtube.com/*",
        "https://github.com/*",
        "https://news.ycombinator.com/*",
        "https://shopee.vn/*",
        "https://shopee.com/*"
      ],
      "js": [
        "social_cleaner/content_unified.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://web.facebook.com/*",
    "https://www.instagram.com/*",
    "https://www.tiktok.com/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.reddit.com/*",
    "https://old.reddit.com/*",
    "https://www.linkedin.com/*",
    "https://www.youtube.com/*",
    "https://github.com/*",
    "https://news.ycombinator.com/*",
    "https://shopee.vn/*",
    "https://shopee.com/*"
  ],
  "permissions": [
    "storage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self'; base-uri 'none'; connect-src 'self' https://pluto-510516922464.asia-south1.run.app https://images.unsplash.com https://api.open-meteo.com https://geocoding-api.open-meteo.com https://api.github.com https://raw.githubusercontent.com https://fonts.gstatic.com; img-src 'self' data: blob: https://images.unsplash.com https://raw.githubusercontent.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' data: https://fonts.gstatic.com"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "newtab/index.html",
    "default_title": "Focus",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  }
}